<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context=".SSC_course">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSSC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black"
        android:background="@color/primary"
        app:title="SSC">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rowCount="4"
                    android:columnCount="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ssc_physics"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/physics1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_marginEnd="10dp"
                                android:text="Physics"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ssc_chemistry"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/chemistry1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_marginEnd="0dp"
                                android:text="Chemistry"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ssc_math"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/math1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_marginEnd="10dp"
                                android:text="Math"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ssc_higher_math"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/higher_math1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_marginEnd="10dp"
                                android:text="Higher\nMath"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ssc_biology"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/biology1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_marginEnd="10dp"
                                android:text="Biology"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ssc_ict"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/ict1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_marginEnd="10dp"
                                android:text="ICT"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#1A000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="Online Batch"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:text="You can enroll in this batch from anywhere of the country"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/details"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="175sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/academic_post"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:text="Online batch(Physics,Chemistry,Math,Biology)"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/seeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="16dp"
                        android:textAlignment="center"
                        android:text="See Details"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_back_primary_15"
                        android:textColor="#ffffff"
                        android:layout_marginEnd="16dp">
                    </androidx.appcompat.widget.AppCompatButton>
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#1A000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="Live Courses(Free)"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/free1"
                                app:cardBackgroundColor="#FCF7FF"
                                app:cardCornerRadius="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="180dp"
                                android:layout_height="100dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/live_course1"/>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/free2"
                                app:cardBackgroundColor="#FCF7FF"
                                app:cardCornerRadius="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="180dp"
                                android:layout_height="100dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/live_course2"/>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/free3"
                                app:cardBackgroundColor="#FCF7FF"
                                app:cardCornerRadius="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="180dp"
                                android:layout_height="100dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/live_course3"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#1A000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="Recorded Courses(Premium)"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/premium1"
                                app:cardBackgroundColor="#FFC75F"
                                app:cardCornerRadius="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="180dp"
                                android:layout_height="100dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/live_course4"/>


                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/premium2"
                                app:cardBackgroundColor="#845EC2"
                                app:cardCornerRadius="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="180dp"
                                android:layout_height="100dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/live_course5"/>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/premium3"
                                app:cardBackgroundColor="#FCF7FF"
                                app:cardCornerRadius="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="180dp"
                                android:layout_height="100dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/live_course6"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>