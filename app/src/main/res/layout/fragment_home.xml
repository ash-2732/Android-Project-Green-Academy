    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/home_background"
        android:orientation="horizontal"
        android:layout_height="110dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:text="Dashboard"
            android:gravity="center"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/profileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/baseline_person_24"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_centerHorizontal="true"
            app:shapeAppearanceOverlay="@style/Circular">

        </com.google.android.material.imageview.ShapeableImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/seeCourse"
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="175dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/academic_post"/>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:layout_marginTop="5dp"
                        android:columnCount="3"
                        android:rowCount="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            android:id="@+id/SSC"
                            android:layout_marginStart="10dp"
                            android:layout_width="30dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="0"
                            android:layout_column="0"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:src="@drawable/ssc"
                                    android:layout_gravity="center"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp" />
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:text="SSC"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            android:id="@+id/HSC"
                            android:layout_marginStart="5dp"
                            android:layout_width="30dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            >

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/hsc"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    />
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:text="HSC"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            android:id="@+id/Admission"
                            android:layout_marginStart="05dp"
                            android:layout_marginEnd="10dp"
                            android:layout_width="30dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="0"
                            android:layout_column="2"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/admission"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    />
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:text="Admission"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/notice"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_marginBottom="5dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/notice"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    />
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:text="Notice"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="1"
                            android:layout_column="0"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/teacher"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    />
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:text="Teachers"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            android:id="@+id/faq"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="1"
                            android:layout_column="2"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/terms_cond"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    />
                                <TextView
                                    android:layout_marginBottom="05dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:text="FAQ"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

<!--                        <LinearLayout-->
<!--                            android:background="@drawable/option_select"-->
<!--                            android:layout_width="50dp"-->
<!--                            android:layout_height="100dp"-->
<!--                            android:layout_columnWeight="1"-->
<!--                            android:layout_rowWeight="1"-->
<!--                            android:layout_column="0"-->
<!--                            android:layout_marginTop="5dp"-->
<!--                            android:layout_marginStart="10dp"-->
<!--                            android:layout_row="2">-->

<!--                        </LinearLayout>-->

                    </GridLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:text="জেনে রাখো"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="Which one is correct?"/>

                    <LinearLayout
                        android:background="@drawable/option_select"
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="50sp">

                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/option_select"
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="50sp">

                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/option_select"
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="50sp">

                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/option_select"
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="50sp">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>